# URL สำหรับเชื่อมต่อกับ Backend (Node.js)
VITE_API_BASE_URL=http://project.3bbddns.com:36145

# Dev server host/port for Vite
VITE_DEV_HOST=0.0.0.0
VITE_DEV_PORT=36144

# App Version
VITE_APP_VERSION=v1.0

# Bot Sleep Timeout (milliseconds) - how long before bot falls asleep when idle
VITE_BOT_SLEEP_TIMEOUT=15000

# Snow Configuration
VITE_SNOW_COUNT=20
VITE_SNOW_MIN_SIZE=0.4
VITE_SNOW_MAX_SIZE=1.8
VITE_SNOW_MIN_DURATION=10
VITE_SNOW_MAX_DURATION=20
VITE_SNOW_OPACITY=1


# Typing delay per character in milliseconds (smaller -> faster typing). Use an integer (e.g. 6).
# If both variables are present, VITE_BOT_TYPING_DELAY_MS takes precedence.
VITE_BOT_TYPING_DELAY_MS=0
# Minimal typing indicator duration in milliseconds (set to 0 to disable). Example: 120
VITE_BOT_TYPING_INDICATOR_MS=300
# Legacy name for compatibility (kept for backward compatibility; value ignored when VITE_BOT_TYPING_DELAY_MS is set)
VITE_BOT_TYPING_SPEED=1

# Auto open chatbot on load (true = เปิดอัตโนมัติ, false = ปิด)
VITE_AUTO_OPEN_CHATBOT=true

# Z-index for snowflakes effect (default: 1000)
VITE_SNOW_Z_INDEX=0`


