    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@types/aos": "^3.0.7",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "terser": "^5.44.1",
